{
  "include": ["*.config.ts", "./src/**/*.ts", "./src/**/*.d.ts", "env.d.ts"],
  "exclude": ["node_modules", "dist", "build", "coverage"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true
  }
}
